{
  "name": "vscode-task",
  "displayName": "vscode-task",
  "description": "Task is a task runner / build tool that aims to be simpler and easier to use than, for example, GNU Make.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-task.runTask",
        "title": "Run Task",
        "category": "Task"
      },
      {
        "command": "vscode-task.refreshTasks",
        "title": "Refresh Tasks",
        "category": "Task"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-task",
          "title": "Task",
          "icon": "./res/task.svg"
        }
      ]
    },
    "views": {
      "vscode-task": [
        {
          "id": "vscode-task.tasks",
          "name": "Tasks"
        }
      ]
    },
    "colors": [
      {
        "id": "vscodetask.namespace",
        "description": "Color for up-to-date tasks in the activity bar.",
        "defaults": {
          "dark": "#5FBBB0",
          "light": "#5FBBB0",
          "highContrast": "#5FBBB0",
          "highContrastLight": "#5FBBB0"
        }
      },
      {
        "id": "vscodetask.upToDate",
        "description": "Color for up-to-date tasks in the activity bar.",
        "defaults": {
          "dark": "#00AA00",
          "light": "#00AA00",
          "highContrast": "#00AA00",
          "highContrastLight": "#00AA00"
        }
      },
      {
        "id": "vscodetask.outOfDate",
        "description": "Color for out-of-date tasks in the activity bar.",
        "defaults": {
          "dark": "#AAAAAA",
          "light": "#AAAAAA",
          "highContrast": "#AAAAAA",
          "highContrastLight": "#AAAAAA"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.76.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  }
}
